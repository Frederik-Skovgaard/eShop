@page
@model eShop.Areas.Administrator.Pages.ProductEditModel
@{
}
<form method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="padding">
            <div class="row">
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <span asp-validation-for="Name"></span>
                                <input class="form-control" asp-for="Name" id="name" type="text" placeholder="Enter product name">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="price">Price</label>
                                <span asp-validation-for="Price"></span>
                                <input class="form-control" asp-for="Price" id="price" type="text" onkeypress="@Model.NummbersOnly" placeholder="Enter product price">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="brad">Brand</label>
                                <span asp-validation-for="Brand"></span>
                                <input class="form-control" asp-for="Brand" id="brad" type="text" placeholder="Enter product brand">
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="TypeId"></span>
                    <div class="row">
                        <div class="form-group col-sm-4">
                            <label for="type">Type</label>
                            <select class="form-control" asp-for="TypeId" id="type">
                                @foreach (var item in Model.Types)
                                {
                                    <option value="@item.TypesId">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <img src="@Model.ImageUrl" />
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="brad">Brand</label>
                                <input type="file" asp-for="Upload" />
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input class="btn btn-primary" type="submit" asp-page-handler="Update" asp-route-id="@Model.ID" value="Update" />
                </div>
            </div>
        </div>
    </div>
</form>
