@page
@model eShop.Areas.Administrator.Pages.UserEditModel
@{
}

<form method="post">

    <div class="container">
        <div class="padding">
            <div class="row">
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="UserName">UserName</label>
                                <span asp-validation-for="UserName"></span>
                                <input class="form-control" asp-for="UserName" id="UserName" type="text" placeholder="Enter username">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <span asp-validation-for="UserName"></span>
                                <input class="form-control" asp-for="Password" id="Password" type="text" placeholder="Enter password">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="Email">Email</label>
                                <span asp-validation-for="Email"></span>
                                <input class="form-control" asp-for="Email" id="Email" type="email" placeholder="Enter email">
                            </div>
                        </div>
                    </div>

                    <span asp-validation-for="RoleId"></span>
                    <div class="row">
                        <div class="form-group col-sm-4">
                            <label for="role">Role</label>
                            <select class="form-control" asp-for="RoleId" id="role">
                                @foreach (var item in Model.Roles)
                                {
                                    <option value="@item.RoleId">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <h5>Optinal</h5>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="Street">Street</label>
                                <span asp-validation-for="Street"></span>
                                <input class="form-control" asp-for="Street" id="Street" type="text" placeholder="Enter street">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="City">City</label>
                                <span asp-validation-for="City"></span>
                                <input class="form-control" asp-for="City" id="City" type="text" placeholder="Enter city">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="zip">Zip</label>
                                <span asp-validation-for="Zip"></span>
                                <input class="form-control" asp-for="Zip" id="zip" type="text" onkeypress="@Model.NummbersOnly" placeholder="Enter zip code">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input class="btn btn-primary" type="submit" asp-page-handler="Update" asp-route-id="@Model.ID" value="Update" />
        </div>
    </div>
</form>